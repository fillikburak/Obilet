@model List<Obilet.Common.Models.BusLocation.BusLocationResponseModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-4">
            <form action="/Journey/Journeys" method="post">
                <div class="mb-2">
                    <label class="form-label">Nereden</label>
                    <select id="source" name="originId" class="selectpicker" data-live-search="true">
                        @foreach (var item in Model)
                        {
                            if (item.Rank == 1)
                            {
                                <option value="@item.Id" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="row">
                    <div class="col-12 mt-1">
                        <div class="d-grid gap-2">
                            <button id="swap" type="button" class="btn btn-primary">Değiştir</button>
                        </div>
                    </div>
                </div>
                <label class="form-label">Nereye</label>
                <div class="mb-2">
                    <select id="destination" name="destinationId" class="selectpicker" data-live-search="true">
                        @foreach (var item in Model)
                        {
                            if (item.Rank == 3)
                            {
                                <option value="@item.Id" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>
                <label class="form-label">Tarih</label>
                <div class="input-group date" data-provide="datepicker">
                    <input id="datepicker" name="departureDate" class="datepicker form-control">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 mt-1">
                        <div class="d-grid gap-2">
                            <button id="setTodayBtn" type="button" class="btn btn-primary">Bugün</button>
                        </div>
                    </div>
                    <div class="col-6 mt-1">
                        <div class="d-grid gap-2">
                            <button id="setTomorrowBtn" type="button" class="btn btn-primary">Yarın</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 mt-1">
                        <div class="d-grid gap-2">
                            <button id="searchJourneys" type="submit" class="btn btn-primary">Bilet Bul</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


